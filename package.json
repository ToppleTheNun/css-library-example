{
  "name": "@topplethenun/css-library-example",
  "version": "0.0.0-development",
  "description": "Example of how to build and publish a CSS library.",
  "repository": "https://github.com/ToppleTheNun/css-library-example",
  "author": "Richard Harrah",
  "license": "MIT",
  "main": "src/css-library-example.scss",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "npm-run-all build:sass build:postcss build:cleancss",
    "build-storybook": "build-storybook",
    "build:cleancss": "cleancss -o dist/css-library-example.min.css dist/css-library-example.css",
    "build:postcss": "postcss --use autoprefixer --no-map -o dist/css-library-example.css dist/css-library-example.css",
    "build:sass": "sass src/css-library-example.scss dist/css-library-example.css",
    "format": "prettier --write src",
    "prebuild": "rimraf dist",
    "prepare": "is-ci || husky install",
    "prewatch": "rimraf dist",
    "start": "sass --watch src/css-library-example.scss dist/css-library-example.css",
    "storybook": "start-storybook -p 6006",
    "publish-storybook": "storybook-to-ghpages"
  },
  "devDependencies": {
    "@babel/core": "7.15.8",
    "@storybook/addon-essentials": "6.4.0-beta.18",
    "@storybook/builder-webpack5": "6.4.0-beta.18",
    "@storybook/html": "6.4.0-beta.18",
    "@storybook/manager-webpack5": "6.4.0-beta.18",
    "@storybook/preset-scss": "1.0.3",
    "@storybook/storybook-deployer": "2.8.10",
    "auto": "10.32.1",
    "autoprefixer": "10.3.7",
    "babel-loader": "8.2.3",
    "clean-css-cli": "5.4.2",
    "css-loader": "6.4.0",
    "husky": "7.0.4",
    "is-ci": "3.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.3.11",
    "postcss-cli": "9.0.1",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.10.0",
    "pretty-quick": "3.1.1",
    "rimraf": "3.0.2",
    "sass": "1.43.3",
    "sass-loader": "12.2.0",
    "style-loader": "3.3.1",
    "webpack": "5"
  },
  "style": "dist/css-library-example.min.css"
}
